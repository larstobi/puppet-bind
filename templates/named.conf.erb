//

<% if !@acls.empty? -%>
<% @acls.sort_by {|key, value| key}.each do |key,value| -%>
acl <%= key %> {
<% value.each do |line| -%>
    <%= line %>;
<% end -%>
};

<% end -%>
<% end -%>
<% if !@masters.empty? -%>
<% @masters.sort_by {|key, value| key}.each do |key,value| -%>
masters <%= key %> {
<% value.each do |line| -%>
    <%= line %>;
<% end -%>
};

<% end -%>
<% end -%>


logging {
    channel main_log {
        file "/var/log/named/named.log" versions 3 size 5m;
        severity info;
        print-time yes;
        print-severity yes;
        print-category yes;
    };
    category default{
        main_log;
    };
    category lame-servers {
        null;
    };
};

<% if @root_servers_file && !@root_servers_file.empty? -%>
zone "." IN {
    type hint;
    file "<%= @root_servers_file %>";
};
<% end -%>
<% if !@zones.empty? -%>
<% @zones.sort_by {|key, value| key}.each do |key,value| -%>
zone "<%= key %>" IN {
<% value.each do |line| -%>
    <%= line %>;
<% end -%>
};

<% end -%>
<% end -%>
include "/etc/named.rfc1912.zones";
<% if !@includes.empty? -%>
<% @includes.each do |filename| -%>
include "<%= filename %>";
<% end -%>
<% end -%>

